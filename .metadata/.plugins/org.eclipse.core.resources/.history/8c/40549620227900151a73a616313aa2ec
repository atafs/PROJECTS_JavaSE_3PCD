package io.txt.reader;

import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Reader_txt {
	
	/** AUX Method: regular expressions */
	private void matchEndText(char a[], int i) {
		 // String to be scanned to find the pattern.
        String word = Character.toString(a[i]);
        String pattern = "(.*)(\\d+)(.*)";

        // Create a Pattern object
        Pattern r = Pattern.compile(pattern);

        // Now create matcher object.
        Matcher m = r.matcher(word);
        if (m.find( )) {
           System.out.println("Found value: " + m.group(0) );
        } else {
           System.out.println("NO MATCH");
        }
	}
	
	/** */
	@SuppressWarnings("null")
	public void readFromTxt() throws IOException{
		FileWriter writer = null;
		FileReader fr = null;
		try {
			File file = new File(".//message//txt//contactTEST.txt");
		    file.createNewFile();
		    fr = new FileReader(file); 
		    char [] a = new char[50];
		    fr.read(a); 
		    for (int i = 0; i < a.length; i++) {
		    	matchEndText(a[], i);
		    	System.out.print(a[i]); 
		    }	
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			fr.close();
			writer.close();
		}
	}
	
	//MAIN
	public static void main(String[] args) {
		//INSTANTIATE AND PRINT TO TXT
		Reader_txt reader = new Reader_txt();
		try {
			reader.readFromTxt();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	

}
