package io.txt.reader;

import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Reader_txt {
	
	/** */
	public void readFromTxt() throws IOException{
		FileWriter writer = null;
		FileReader fr = null;
		try {
			File file = new File(".//message//txt//contactTEST.txt");
		    // creates the file
		    file.createNewFile();
		    // creates a FileWriter Object
		    writer = new FileWriter(file); 
		    // Writes the content to the file
		    writer.write("This\n is\n an\n example"); 
		    writer.flush();
		 

		    //Creates a FileReader Object
		    fr = new FileReader(file); 
		    char [] a = new char[50];
		    fr.read(a); // reads the content to the array
		    for(char c : a)
		       System.out.print(c); //prints the characters one by one
		    	
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			fr.close();
			writer.close();
		}
	}
	
	//MAIN
	public static void main(String[] args) {
		//INSTANTIATE AND PRINT TO TXT
		Reader_txt reader = new Reader_txt();
		try {
			reader.readFromTxt();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	

}
